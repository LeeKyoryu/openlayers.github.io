---
title: 'OpenLayers Custom Build'
layout: main.hbs
head:
 - <link rel="stylesheet" href="<%= assets %>/theme/index.css" type="text/css">
 - <link rel="stylesheet" href="<%= assets %>/theme/builder.css" type="text/css">
scripts:
- <script src="<%= assets %>/js/builder.js"></script>
---

<div class='container'>
  <div class='heading'>
    <h1>OpenLayers Online Build Tool</h1>
  </div>
  <div class="row description">
    <div class="col-sus7 col-md-8 lead">
      Choose components for your custom build of OL3.
    </div>
    <div class="col-sm-5 col-md-4">
      <a href="" type="submit" id="btn-compile" class="btn btn-md btn-outline" data-loading-text="Building...">
        <span class="status">Compile &amp; Download Selected</span>
        <span class="status-icon"></span>
      </a>
    </div>
  </div>
  <div class="build-success alert alert-success" style="display: none;" role="alert"></div>
  <div class="build-error alert alert-success" style="display: none;" role="alert"></div>
  <form action="" method="post" id="compile">
    <div class="row">
      <div class="col-sm-6">
        <div class='subheading'>
          <h3>Symbols</h3>
          <button type="button" id="btn-toggleSymbols" class="btn btn-default btn-sm">Toggle All</button>
        </div>
        <ul class="list-unstyled well" id="symbols">
          {{#filterNamespace info.symbols}}
            {{> api-item.partial}}
          {{/filterNamespace}}
        </ul>
      </div>
      <div class="col-sm-6">
        <div class='subheading'>
          <h3>Defines</h3>
          <button type="button" id="btn-toggleDefault" class="btn btn-default btn-sm">Toggle Default</button>
          <button type="button" id="btn-toggleDefines" class="btn btn-default btn-sm">Toggle All</button>
        </div>
        <ul class="list-unstyled well" id="defines">
          {{#each info.defines}}
            <li class="mainClass">
              <input type="checkbox" class="toggle-defines" {{#if default}}default="true"{{/if}} value="{{name}}"/>
              <label data-container="body" data-toggle="popover" data-placement="right" title="{{name}}" data-content="{{description}}" data-trigger="hover">{{name}}</label>
            </li>
          {{/each}}
        </ul>
      </div>
  </form>
</div>

